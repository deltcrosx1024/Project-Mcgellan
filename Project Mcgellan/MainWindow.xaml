<Window x:Class="Project_Mcgellan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Mcgellan"
        mc:Ignorable="d"
        Title="MainWindow" Style="{DynamicResource MainWindowStyle}"
        WindowStartupLocation="CenterScreen">
    <DockPanel Background="{DynamicResource DefaultDark}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Options">
                <MenuItem Header="Settings" Click="SettingsMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Home"/>
            <MenuItem Header="Sales">
                <MenuItem Header="Product List"/>
                <MenuItem Header="Import Inventory"/>
                <MenuItem Header="Export Inventory"/>
                <MenuItem Header="Payment Options"/>
            </MenuItem>
            <MenuItem Header="Warehouse">
                <!--Code Goes Here-->
                <MenuItem Header="Warehouse Management"/>
                <MenuItem Header="Categories"/>
                <MenuItem Header="Location Prefix"/>
            </MenuItem>
            <MenuItem Header="Users" />
            <MenuItem Header="Statistics">
                <MenuItem Header="Sales Statistics"/>
                <MenuItem Header="Warehouse I/O Statistics"/>
                <MenuItem Header="Overview"/>
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Tab1">
                <!--Tab Contents for tab 1-->
            </TabItem>
            <TabItem Header="Tab2">
                <!--Tab Contents for tab 2-->
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>