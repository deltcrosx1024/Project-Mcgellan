<Window x:Class="Project_Mcgellan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Mcgellan"
        xmlns:avalonDock="https://github.com/Dirkster99/AvalonDock"
        mc:Ignorable="d"
        Style="{DynamicResource MainWindowStyle}"
        Background="{DynamicResource AppBackgroundBrush}"
        Title="Project Mcgellan"
        WindowStartupLocation="CenterScreen">
    <Border Background="{DynamicResource Default-Dark}" CornerRadius="8" Padding="5">
        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Padding" Value="0,5,0,0"/>

                <Style.Triggers>
                    <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}"
                                    Value="Maximized">
                        <Setter Property="Padding" Value="0,10,0,0"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar" Background="{DynamicResource Default-Dark}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="5" Background="{DynamicResource Default-Dark}">
                    <Image Source="/Assets/app_icon.ico" Width="20" Height="20" Margin="5,0"/>
                    <Menu Background="Transparent" Foreground="White">
                        <MenuItem Header="_File">
                        </MenuItem>
                        <MenuItem Header="_Edit">
                        </MenuItem>
                    </Menu>
                </StackPanel>

                <DockPanel Background="{DynamicResource Default-Dark}">
                    <Menu DockPanel.Dock="Top" Background="#242526" Foreground="White">
                        <MenuItem Header="Home"/>
                        <MenuItem Header="Options">
                            <MenuItem Header="Settings" Foreground="#242526" Click="SettingsMenuItem_Click">
                                <MenuItem.Icon>
                                    <TextBox FontFamily="Segoe MDL2 Assets"
                                             Text="&#xE713;"
                                             HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="Sales">
                            <MenuItem Header="Product List" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE71D;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Import Inventory" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE896;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Export Inventory" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE898;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Payment Options" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE8C7;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="Warehouse">
                            <MenuItem Header="Warehouse Management" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE80F;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Categories" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE8EC;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Header="Location Prefix" Foreground="#242526">
                                <MenuItem.Icon>
                                    <TextBlock FontFamily="Segoe MDL2 Assets"
                                               Text="&#xE707;"
                                               HorizontalAlignment="Center"/>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                        <MenuItem Header="Users" />
                        <MenuItem Header="Statistics">
                            <MenuItem Header="Sales Statistics" Foreground="#242526"/>
                            <MenuItem Header="Warehouse I/O Statistics" Foreground="#242526"/>
                            <MenuItem Header="Overview" Foreground="#242526"/>
                        </MenuItem>
                        <MenuItem Header="Help">
                            <MenuItem Header="About" Foreground="#242526"/>
                            <MenuItem Header="Documentation" Foreground="#242526"/>
                        </MenuItem>
                    </Menu>
                </DockPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" x:Name="MinimizeButton" FontFamily="Segoe MDL2 Assets" Content="&#xE921;" Width="50" Height="30" Click="MinimizeButton_Click"/>
                    <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" x:Name="MaximizeButton" FontFamily="Segoe MDL2 Assets" Content="&#xE71A;" Width="50" Height="30" Click="MaximizeButton_Click"/>
                    <Button Background="Transparent" BorderBrush="Transparent" Foreground="White" x:Name="CloseButton" FontFamily="Segoe MDL2 Assets" Content="&#xE711;" Width="50" Height="30" Click="CloseButton_Click"/>
                </StackPanel>
                
                <!--The rest of the content goes here-->
                <Border Grid.Row="1" Background="{DynamicResource Default-Light}" BorderThickness="3" CornerRadius="0,0,8,8" Padding="5">
                    <Grid>
                        <avalonDock:DockingManager x:Name="DockingManager">

                            <!-- This defines the overall layout structure. -->
                            <avalonDock:LayoutRoot>
                                <!-- LayoutPanel arranges its children. 'Orientation="Horizontal"' means panes will be side-by-side. -->
                                <avalonDock:LayoutPanel Orientation="Horizontal">

                                    <!-- Left Anchorable Pane Group -->
                                    <avalonDock:LayoutAnchorablePaneGroup DockWidth="250">
                                        <avalonDock:LayoutAnchorablePane>
                                            <!-- A LayoutAnchorable is a dockable tool window. -->
                                            <avalonDock:LayoutAnchorable Title="Toolbox" ContentId="toolbox">
                                                <StackPanel Margin="10">
                                                    <Button Content="Button" Margin="2"/>
                                                    <Button Content="CheckBox" Margin="2"/>
                                                    <Button Content="Label" Margin="2"/>
                                                    <TextBlock Text="More tools..." Margin="2,10,2,2" FontWeight="Bold"/>
                                                </StackPanel>
                                            </avalonDock:LayoutAnchorable>
                                        </avalonDock:LayoutAnchorablePane>
                                    </avalonDock:LayoutAnchorablePaneGroup>

                                    <!-- Main Document and Right Pane Group -->
                                    <avalonDock:LayoutPanel Orientation="Vertical">

                                        <!-- The Document Pane Group holds the main content area. -->
                                        <avalonDock:LayoutDocumentPaneGroup>
                                            <avalonDock:LayoutDocumentPane>
                                                <!-- A LayoutDocument is typically a tabbed document in the center. -->
                                                <avalonDock:LayoutDocument Title="Workspace Canvas" ContentId="main_canvas">
                                                    <Grid Background="#FFE0E0E0">
                                                        <TextBlock Text="This is the main canvas area." 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center" 
                                                       FontSize="18" 
                                                       Foreground="Gray"/>
                                                    </Grid>
                                                </avalonDock:LayoutDocument>
                                                <avalonDock:LayoutDocument Title="Another Document" ContentId="doc2">
                                                    <TextBox Text="You can edit text here." AcceptsReturn="True" TextWrapping="Wrap" Padding="5"/>
                                                </avalonDock:LayoutDocument>
                                            </avalonDock:LayoutDocumentPane>
                                        </avalonDock:LayoutDocumentPaneGroup>

                                    </avalonDock:LayoutPanel>

                                    <!-- Right Anchorable Pane Group -->
                                    <avalonDock:LayoutAnchorablePaneGroup DockWidth="250">
                                        <avalonDock:LayoutAnchorablePane>
                                            <avalonDock:LayoutAnchorable Title="Properties" ContentId="properties">
                                                <Border Padding="5">
                                                    <TextBlock Text="Properties for selected item..." TextWrapping="Wrap"/>
                                                </Border>
                                            </avalonDock:LayoutAnchorable>
                                        </avalonDock:LayoutAnchorablePane>
                                    </avalonDock:LayoutAnchorablePaneGroup>

                                </avalonDock:LayoutPanel>
                            </avalonDock:LayoutRoot>
                        </avalonDock:DockingManager>
                    </Grid>
                </Border>
            </Grid>
            
        </Grid>
        
    </Border>
</Window>