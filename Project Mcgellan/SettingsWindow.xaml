<Window x:Class="Project_Mcgellan.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Mcgellan"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Settings"
        Style="{DynamicResource SettingsWindowStyle}">
    <DockPanel Background="{DynamicResource Default-Bg-Brush-Light}">
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TabControl DockPanel.Dock="Top" Margin="10" Background="{DynamicResource Default-Bg-Brush-Light}">
                <TabItem Header="General">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Resolution:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" Width="150" SelectedValue="{Binding Resolution, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" x:Name="ResolutionComboBox" Margin="0,0,0,10">
                            <ComboBoxItem Content="3840x2160"/>
                            <ComboBoxItem Content="1920x1080"/>
                            <ComboBoxItem Content="1280x720"/>
                            <ComboBoxItem Content="800x600"/>
                        </ComboBox>

                        <Label Content="Theme:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Width="150" SelectedValue="{Binding Theme, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" x:Name="ThemeComboBox" Margin="0,0,0,10">
                            <ComboBoxItem Content="Default-Dark"/>
                            <ComboBoxItem Content="Default-Light"/>
                            <ComboBoxItem Content="System-Default"/>
                        </ComboBox>
                    </Grid>
                </TabItem>

                <TabItem Header="Facility" Background="{DynamicResource Default-Bg-Brush-Light}">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Content="Facility Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Width="200" Text="{Binding FacilityName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" x:Name="FacilityNameInput" Margin="0,0,0,10"/>

                        <Label Content="Facility ID:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Width="100" Text="{Binding FacilityID, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" x:Name="FacilityIdInput" Margin="0,0,0,10"/>

                        <Label Content="Location:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Width="200" Text="{Binding FacilityLocation, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" x:Name="FacilityLocated" Margin="0,0,0,10"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Data" Background="{DynamicResource Default-Bg-Brush-Light}">
                    <Grid Margin="10">
                        <TextBlock Text="Data Settings" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,10,0,10"/>
                        <TextBlock Text="Work In Progress" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    </Grid>
                </TabItem>

                <TabItem Header="System" Background="{DynamicResource Default-Bg-Brush-Light}">
                    <Grid Margin="10">
                        <TextBlock Text="System Settings" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,10,0,10"/>
                        <TextBlock Text="Work In Progress" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Font" Background="{DynamicResource Default-Bg-Brush-Light}">
                    <Grid Margin="10">
                        <TextBlock Text="Font Settings" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,10,0,10"/>
                        <TextBlock Text="Work In Progress" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    </Grid>
                </TabItem>

                <TabItem Header="Statistics" Background="{DynamicResource Default-Bg-Brush-Light}">
                    <Grid Margin="10">
                        <TextBlock Text="Statistics Settings" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" Margin="0,10,0,10"/>
                        <TextBlock Text="Work In Progress" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    </Grid>
                </TabItem>
            </TabControl>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
                <Button Content="Apply" Width="75" Margin="0,0,10,0" Click="ApplyButton_Click" IsEnabled="{Binding IsApplyEnabled}"/>
                <Button Content="Cancel" Width="75" Margin="0,0,10,0" Click="CancelButton_Click"/>
                <Button Content="Restore Default" Width="120" Click="RestoreDefaults_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
